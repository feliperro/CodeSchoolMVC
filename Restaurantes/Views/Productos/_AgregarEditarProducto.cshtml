@model ProductoDTO
@{
    ViewData["Title"] = "_AgregarEditarProducto";
}

<form asp-action="@ViewData["Accion"]" asp-antiforgery="true">
    <input type="hidden" id="Id" asp-for="Id" value="@Model.Id" />
    <div class="text-danger">
        @Html.ValidationSummary(true)
    </div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input class="form-control" asp-for="Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input class="form-control" asp-for="Cantidad" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input class="form-control" asp-for="Precio" />
        <span asp-validation-for="Precio" class="text-danger"></span>

    </div>

    @*@*<button type="submit" class="btn btn-primary">Guardar</button>*@
</form>


@model MesaViewModel
@{
    ViewData["Title"] = "_AgregarEditarMesa";
}

    <form asp-action="@ViewData["Accion"]" asp-antiforgery="true">
        <input type="hidden" id="Id" asp-for="Id" value="@Model.Id"/>
        <div class="text-danger">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            <label asp-for="Identificador"></label>
            <input class="form-control" asp-for="Identificador" />
            <span asp-validation-for="Identificador" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Capacidad"></label>
            <input class="form-control" asp-for="Capacidad" />
            <span asp-validation-for="Capacidad" class="text-danger"></span>

        </div>
        @*@*<button type="submit" class="btn btn-primary">Guardar</button>*@
    </form>

